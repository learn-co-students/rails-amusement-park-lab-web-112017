<% if flash[:error] %>
  <p><%= flash[:error][0] %></p>
<% end %>
<%= form_tag session_path do %>
  <%= text_field_tag :name, nil, placeholder: "Name", id: "user[name]" %>
  <%= password_field_tag :password, nil, placeholder: "Password", id: "user[password]" %>
  <%= submit_tag "Sign In" %>
<% end %>
<%= link_to "Sign up", new_user_path %>